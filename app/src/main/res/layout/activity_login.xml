<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/unifacilita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Unifacilita"
        android:textColor="#BA0F0F"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/aa"
        android:ems="10"
        android:hint="   E-mail"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unifacilita" />

    <EditText
        android:id="@+id/input_pass"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/aa"
        android:ems="10"
        android:hint="   Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_email" />

    <Button
        android:id="@+id/button_acessar"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BA0F0F"
        android:text="Acessar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_pass" />

    <Button
        android:id="@+id/button_cadastre"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BA0F0F"
        android:text="Cadastre-se"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_acessar" />

    <Button
        android:id="@+id/button_new_pass"
        android:layout_width="176dp"
        android:layout_height="52dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#BA0F0F"
        android:text="Recuperar Senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cadastre"
        app:layout_constraintTop_toBottomOf="@+id/button_acessar" />

</androidx.constraintlayout.widget.ConstraintLayout>